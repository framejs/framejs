{
  "name": "@framejs/core",
  "version": "1.0.8",
  "description": "A ultra light library for writing custom elements",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "types": "dist/index.d.ts",
  "directories": {
    "test": "dist/tests"
  },
  "scripts": {
    "build": "node ./node_modules/typescript/bin/tsc",
    "build:tests": "node ./node_modules/typescript/bin/tsc -p tsconfig-tests.json",
    "test": "npm run build:tests && node ./node_modules/karma/bin/karma start --single-run --browsers ChromeHeadless karma.conf.js",
    "precommit": "lint-staged",
    "prettier": "prettier --write **/*.ts"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/framejs/framejs.git"
  },
  "keywords": [
    "components",
    "custom",
    "dom",
    "elements",
    "web",
    "typescript"
  ],
  "author": "Emil MÃ¸ller <emilrmoeller@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/framejs/framejs/issues"
  },
  "homepage": "https://github.com/framejs/framejs#readme",
  "engines": {
    "node": ">=8.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.0.0",
    "@types/reflect-metadata": "^0.1.0",
    "@webcomponents/webcomponentsjs": "^1.1.1",
    "chai": "^4.1.2",
    "husky": "^0.14.3",
    "karma": "^2.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-rollup-preprocessor": "^5.1.1",
    "lint-staged": "^7.0.2",
    "mocha": "^5.0.5",
    "prettier": "1.11.1",
    "reflect-metadata": "^0.1.12",
    "rollup": "^0.57.1",
    "rollup-plugin-typescript": "^0.8.1",
    "typescript": "^2.8.1"
  }
}
